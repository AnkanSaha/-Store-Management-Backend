{
  "compilerOptions": {
      "target": "ES6", // this is for set the target version of typescript written code
      "module": "CommonJS", // this is for set the module type of javascript code compiled
      "rootDir": "./src", // this is for set the root directory of typescript written code
      "moduleResolution": "node", // this is for set the module resolution strategy
      "allowJs": false, // this is set of allow javascript file to be compiled
      "inlineSourceMap": true, // this is for set the inline source map
      "outDir": "./Build", // this is for set the output directory of compiled javascript code
      "removeComments": true, // this is for set the remove comments from compiled javascript code
      "allowSyntheticDefaultImports": true, // this is for set the allow synthetic default imports
      "esModuleInterop": true, // this is for set the es module interop
      "forceConsistentCasingInFileNames": true, // this is for set the force consistent casing in file names
      "strict": true, // this is for set the strict mode
      "alwaysStrict": true, // this is for set the always strict mode
      "noUnusedLocals": true, // this is for set the no unused locals
      "noUnusedParameters": true, // this is for set the no unused parameters
      "skipLibCheck": true, // this is for set the skip lib check
      "declaration": false, // this is for set the declaration
  },
  "include": [
      "./src/**/*"
  ] // this is for set the include directory of typescript written code
}